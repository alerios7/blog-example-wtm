<%= form_for @post do |f| %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, cols: 10, rows: 10, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Selecciona una CategorÃ­a"}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :remote_photo_url %>
      <%= f.text_field :remote_photo_url, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
<% end %>