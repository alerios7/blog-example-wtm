<% content_for :header do %>
  Lista de Articulos
<% end %>

<div class="row">
  <%= form_tag posts_path, method: :get do %>
    <div class="col-lg-6">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Go!</button>
        </span>
        <!-- <input type="text" class="form-control" placeholder="Search for..."> -->
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search form..."%>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  <% end %>
</div><!-- /.row -->


<% @posts.each do |post| %>
  <article>
    <h2><%= post.title %></h2>
    <p><%= truncate(post.body, {length: 140}) %></p>
    <%= link_to "Ver Post", post_path(post), class: "btn btn-link" %>
  </article>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Nuevo Post", new_post_path, class: "btn btn-default" %>
<% end %>